<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_1_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/h_shape">


    <TextView
        android:id="@+id/list1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/c_list_name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list1_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list1_name"
        android:layout_alignStart="@id/list1_name"
        android:layout_alignLeft="@id/list1_name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        android:textColor="@color/c_list_second"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/list1_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list1_second"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:textColor="@color/c_list_editor"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />
</RelativeLayout>