<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp">
                <shape>
                    <solid android:color="#08000000"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item
                android:left="1.5dp"
                android:top="1.5dp"
                android:bottom="1.5dp"
                android:right="1.5dp">
                <shape>
                    <solid android:color="#0A000000"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item
                android:left="2.5dp"
                android:top="2.5dp"
                android:bottom="2.5dp"
                android:right="2.5dp">
                <shape>
                    <solid android:color="#0D000000"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item
                android:left="3dp"
                android:top="3dp"
                android:bottom="3dp"
                android:right="3dp">
                <shape>
                    <solid android:color="@color/c_card_background"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>